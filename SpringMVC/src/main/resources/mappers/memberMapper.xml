<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.itwillbs.mapper.MemberMapper">
      
     <!-- 시간정보 조회 -->
     <select id="getTime" resultType="string">
        select now()
     </select>
     <!-- 시간정보 조회 -->
     
     <!-- 회원가입 -->
     <insert id="insertMember">
        insert into tbl_member (userid,userpw,username,useremail) 
        values (#{userid},#{userpw},#{username},#{useremail})     
     </insert>
     <!-- 회원가입 -->
     
     <!-- 로그인 -->
     <select id="login" resultType="com.itwillbs.domain.MemberVO">
        select * from tbl_member 
        where userid=#{userid} and userpw=#{userpw}
     </select>
     <!-- 로그인 -->
     
     <!-- 회원정보 수정 -->
     <update id="update">
         update tbl_member set username=#{username},useremail=#{useremail},updatedate=now()  
         where userid=#{userid} and userpw=#{userpw}
     </update>
     <!-- 회원정보 수정 -->
     
     
     <!-- 회원정보 삭제 -->
     <delete id="delete">
        delete from tbl_member 
        where userid = #{userid} and userpw = #{userpw}
     </delete>
     <!-- 회원정보 삭제 -->
     
     <!-- 회원정보 조회 -->
     <select id="getMember" resultType="com.itwillbs.domain.MemberVO" >
       select * from tbl_member 
       where userid = #{userid}     
     </select>
     <!-- 회원정보 조회 -->
     
     
     <!-- 회원정보 목록 조회 -->
     <select id="memberList" resultType="com.itwillbs.domain.MemberVO">
       select * from tbl_member
     </select>
     <!-- 회원정보 목록 조회 -->
     
     
     
  
  
  </mapper>
  